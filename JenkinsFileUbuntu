pipeline {
    agent {
        docker {
            image 'node:8-alpine'
            args '-p 3000:3000 -v /.cache/ -v /.bower/ -v /.config/configstore/'
        }
    }
    environment{
        HOME = '.'
    }
    stages {
        stage('Build') { 
            steps {
                sh 'npm install'
                
            }
          }
        stage('Test') { 
            steps {
                sh 'npm run test'
               
            }
        }
    }
}
